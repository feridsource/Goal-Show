<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ferid.app.goalshow" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:resizeableActivity="false">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".games.TwoPlayerGameActivity"
            android:label="@string/twoPlayer"
            android:screenOrientation="portrait"
            android:resizeableActivity="false"/>

        <activity android:name=".games.SinglePlayerGameActivity"
            android:label="@string/singlePlayer"
            android:screenOrientation="portrait"
            android:resizeableActivity="false"/>

        <activity android:name=".games.GameOverActivity"
            android:label="@string/matchStats"
            android:screenOrientation="portrait"
            android:resizeableActivity="false"/>

        <activity android:name=".tutorial.TutorialActivity"
            android:label="@string/tutorial"
            android:screenOrientation="portrait"
            android:resizeableActivity="false"/>

    </application>

</manifest>
